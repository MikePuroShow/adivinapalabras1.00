<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adMongoDB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2C7E4">

    <Button
        android:id="@+id/botonSQL2Actividad"
        android:layout_width="218dp"
        android:layout_height="76dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="144dp"
        android:onClick="adSQLite"
        android:text="Administrar SQL LITE"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/administrarMongo2Ac"
        android:layout_width="231dp"
        android:layout_height="68dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="76dp"
        android:onClick="adMongoDB"
        android:text="Administrar MONGODB"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonSQL2Actividad" />

    <Button
        android:id="@+id/administrarMYSQLtextView"
        android:layout_width="231dp"
        android:layout_height="68dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="200dp"
        android:onClick="adMySQL"
        android:text="Administrar MySQL"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonSQL2Actividad" />
</androidx.constraintlayout.widget.ConstraintLayout>